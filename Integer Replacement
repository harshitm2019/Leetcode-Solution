class Solution {
    public int integerReplacement(int n){

    long temp = (long)n;
    int count = 0;
    
    
    while(temp != 1){

     if(temp % 2 == 0) temp /= 2;
     else {
             
          long t = temp - 1;
          t /=2;
    
           if(t % 2 != 0 && t != 1) temp += 1;
           else temp -= 1;

     }
       
    count++;
    }
    return count;
    }
}
